  <% if @bookings.any? %>
  <!-- Main content -->
  <div class="col-12">
    <div class="card">
      <!-- /.card-header -->
      <div class="card-body">
        <form class="form-inline mb-3 w-100 col-12">
          <input class="form-control mb-0 mr-5" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-primary my-2 mr-5" type="submit">Tìm kiếm</button>
        </form>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Ngày đặt phòng</th>
              <th>Thời gian ở</th>
              <th>Ngày nhận phòng</th>
              <th>Ngày trả phòng</th>
              <th>Số phòng đã đặt</th>
              <th>Trạng thái booking</th>
              <th>Người đặt</th>
              <th>Lý do từ chối</th>
              <th>Đánh giá của khách</th>
              <th>Tổng giá</th>
              <th>Thao tác</th>
            </tr>
          </thead>
          <tbody>
            <% @bookings.each do |booking| %>
              <tr>
                <td><%= booking.booking_date %></td>
                <td><%= booking.duration_of_stay %></td>
                <td><%= booking.check_in %></td>
                <td><%= booking.checkout %></td>
                <td><%= booking.total_rooms_booked %></td>
                <td><%= booking.status %></td>
                <td><%= booking.user.name %></td>
                <td><%= booking.refuse_reason %></td>
                <td><%= booking.user_star_rate %></td>
                <td><%= booking.total_amount %></td>
                <td>
                  <i class="fa fa-trash icon delete-icon" aria-hidden="true"></i>
                  <i class="fa fa-pencil-square icon edit-icon" aria-hidden="true"></i>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-lg-12 ">
    <div class="room-pagination">
      <%== pagy_bootstrap_nav @pagy %>
    </div>
  </div>
<% end %>
