  <% if @bookings.any? %>
  <!-- Main content -->
  <div class="col-12">
    <div class="card">
      <!-- /.card-header -->
      <div class="card-body">
        <form class="form-inline mb-3 w-100 col-12">
          <input class="form-control mb-0 mr-5" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-primary my-2 mr-5" type="submit">Tìm kiếm</button>
        </form>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th><%= t(".booking_date") %></th>
              <th><%= t(".check_in_date") %></th>
              <th><%= t(".check_out_date") %></th>
              <th><%= t(".status_booking") %></th>
              <th><%= t(".booking_owner") %></th>
              <th><%= t(".booking_reject") %></th>
              <th><%= t(".booking_rate") %></th>
              <th><%= t(".actions") %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @bookings %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-lg-12 ">
    <div class="room-pagination">
      <%== pagy_bootstrap_nav @pagy %>
    </div>
  </div>
<% end %>
