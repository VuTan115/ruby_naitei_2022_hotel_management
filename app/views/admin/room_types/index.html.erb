<% if @room_types.any? %>
  <!-- Main content -->
  <div class="col-12">
    <div class="card">
      <!-- /.card-header -->
      <div class="card-body">
        <form class="form-inline mb-3 w-100 col-12">
          <input class="form-control mb-0 mr-5" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-primary my-2 mr-5" type="submit">Tìm kiếm</button>
          <button class="btn btn-primary my-2 mr-5" type="submit">Thêm</button>
        </form>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th><%= t(".image") %></th>
              <th><%= t(".name") %></th>
              <th><%= t(".price") %></th>
              <th><%= t(".area") %></th>
              <th><%= t(".capacity") %></th>
              <th><%= t(".actions") %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @room_types %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-lg-12 ">
    <div class="room-pagination">
      <%== pagy_bootstrap_nav @pagy %>
    </div>
  </div>
<% end %>
