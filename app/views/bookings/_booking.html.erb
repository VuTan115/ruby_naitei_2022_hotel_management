<tr>
  <% if !booking.cancel? %>
    <td><%= booking.booking_date %></td>
    <td><%= booking.check_in %></td>
    <td><%= booking.check_out %></td>
    <td>
      <% case %>
      <% when booking.pending? %>
      <span class="badge badge-warning"><%= t ".pending" %></span>
      <% when  booking.approve? %>
      <span class="badge badge-success"><%= t ".approve" %></span>
      <% when booking.refuse? %>
      <span class="badge badge-danger"><%= t ".refuse" %></span>
      <% when booking.paid? %>
      <span class="badge badge-info"><%= t ".paid" %></span>
    <% end %>
  </td>
  <td><%= booking.rooms[0].room_type.name %></td>
  <td>
    <% booking.rooms.each do |room| %>
      <p class="badge badge-light"><%= room.number  %></p>
      <br/>
    <% end %>
  </td>
  <td><%= booking.refuse_reason %></td>
  <td><%= booking.user_star_rate %></td>
  <th><%= booking.rooms.length * booking.rooms[0].room_type.cost %>$</th>
  <td>
    <% if !booking.approve? %>
      <td>
        <%= link_to booking_path(booking.id), method: :delete, :remote => true, data: {confirm: t(".confirm_delete")} do %>
          <i class="fa fa-trash icon delete-icon" aria-hidden="true"></i>
        <% end %>
      <% end %>
    </td>
  <% end %>
</tr>
